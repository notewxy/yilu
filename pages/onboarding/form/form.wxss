/* pages/onboarding/form.wxss */
.container {
  padding: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.page-title {
  justify-content: center;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-desc {
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
  color: #888;
  margin-bottom: 60rpx;
}

/* 角色选择器 (修改版二) */
.role-selector {
  display: flex; /* 使用 flex 布局，让子元素可以水平排列 */
  justify-content: space-around; /* 子元素之间和边缘都有间距 */
  margin-bottom: 60rpx;
}

.role-btn {
  width: 48%; /* 设置按钮宽度为父容器的一半左右 */
  height: 90rpx;
  /* 移除 display: flex 和居中属性，因为按钮内容只有文字 */
  line-height: 90rpx; /* 使用 line-height 实现垂直居中 */
  text-align: center; /* 文字水平居中 */
  border-radius: 16rpx;
  border: 1px solid #e0e0e0;
  background-color: #fff;
  color: #333;
  font-weight: bold;
  transition: all 0.2s ease-in-out;
}

.role-btn.active {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.2);
}

.form-container {
  width: 100%;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.label {
  width: 200rpx;
  color: #333;
  font-weight: bold;
}

.input {
  flex: 1;
  text-align: right;
}

.picker {
  flex: 1;
  text-align: right;
  color: #555;
}

/* 图片上传区域样式 */
.photo-uploader {
  align-items: flex-start;
}
.uploader-area {
  flex: 1;
  height: 200rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.uploader-tip {
  color: #999;
}
.preview-image {
  width: 100%;
  height: 100%;
}

.submit-btn {
  margin-top: 80rpx;
  width: 100%;
  height: 96rpx;
  /* 同样移除 line-height，使用 flex 居中 */
  display: flex;
  justify-content: center;
  align-items: center;

  background-image: linear-gradient(to right, #07c160, #05a552);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.25);
}

/* 按钮按下的效果 (新增) */
.button-hover {
  opacity: 0.9;
  transform: scale(0.98);
}