/* pages/guardian/map/map.wxss */
.container {
  /* 确保容器和页面一样高 */
  height: 100vh;
  width: 100vw;
  position: relative;
}

.map-view {
  width: 100%;
  height: 100%;
}

.controls {
  position: absolute;
  bottom: 150rpx; /* 避开tabBar */
  left: 30rpx;
}

.control-btn {
  background-color: rgba(255, 255, 255, 0.9);
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

