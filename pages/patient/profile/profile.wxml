<!--pages/patient/profile/profile.wxml-->
<view class="container">
  <view class="page-header">我的信息卡</view>
  
  <view class="info-card">
    <view class="section personal-info">
      <image class="avatar" src="{{userInfo.avatar}}"></image>
      <view class="name">{{userInfo.name}}</view>
      <view class="details">
        <view class="detail-item">
          <text class="label">性别 </text>
          <text class="value">{{userInfo.gender}}</text>
        </view>
        <view class="detail-item">
          <text class="label">年龄 </text>
          <text class="value">{{userInfo.age}} 岁</text>
        </view>
      </view>
    </view>

    <view class="divider"></view>

    <view class="section contact-info">
      <view class="contact-item">
        <view class="label">紧急联系人</view>
        <view class="value main">{{userInfo.emergencyContact.name}} ({{userInfo.emergencyContact.relation}})</view>
      </view>
       <view class="contact-item">
        <view class="label">联系电话</view>
        <view class="value main phone">{{userInfo.emergencyContact.phone}}</view>
      </view>
      <view class="contact-item">
        <view class="label">家庭住址</view>
        <view class="value">{{userInfo.address}}</view>
      </view>
    </view>
    
    <view class="divider"></view>

    <view class="section medical-info">
       <view class="label">重要健康状况</view>
       <view class="value">{{userInfo.medicalCondition || '无'}}</view>
    </view>
  </view>
</view>